    "version": "0.3.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'cloudflare-ddns'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cloudflare-ddns",
                    "--package=cloudflare-ddns"
                ],
                "filter": {
                    "name": "cloudflare-ddns",
                    "kind": "bin"
                }
            },
            "args": [
                "--key=${env:DDNS_AUTH_KEY}",
                "--domain=${env:DOMAIN}",
                "--email=${env:EMAIL}",
                "--zone=${env:ZONE}"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in 'cloudflare-ddns'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=cloudflare-ddns",
                    "--package=cloudflare-ddns"
                ],
                "filter": {
                    "name": "cloudflare-ddns",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}